<script type = "text/javascript" src = "http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="http://192.168.42.80:3000/js/adduserAjax.js"> 

</script>        
<body>
    <!-- Sidenav -->
    <%- include ('../partials/sidebar') %>
    <!-- Main content -->
    <div class="main-content">
      <!-- Top navbar -->
      <%- include ('../partials/navbar') %>
      <!-- Header -->
      <%- include ('../partials/header') %>
      <!-- Page content -->
      <div class="container-fluid mt--7">
            <!-- Table -->
            <!-- Dark table -->
            <div class="row mt-5">
            <div class="col mt-7">
                <div class="card bg-default shadow">
                    <div class="card-header bg-transparent border-0">
                        <h3 class="text-white mb-0" ><a href="/users">Users</a> / Add New</h3>
                    </div>
                </div>
                <br>
                <div class="card-body px-lg-5 py-lg-5">
                    <form id="addUserForm" enctype="multipart/form-data" novalidate>
                        
                        <div class="form-group">
                            <label for="firstname"><b>FirstName:</b></label>
                            <input type="text" placeholder="Enter Your FirstName" name="fname" id="fname" minlength="3" maxlength="12" pattern="^[A-Za-z]+$" required>    
                            <div id="fnameError"></div>
                        </div>
                        <div class="form-group">
                            <label for="lastname"><b>LastName:</b></label>
                            <input type="text" placeholder="Enter Your LastName" name="lname" id="lname" minlength="3" maxlength="12" pattern="^[A-Za-z]+$" required>    
                            <div id="lnameError"></div>
                        </div>
                        <div class="form-group">
                            <label for="email"><b>Email:</b></label>
                            <input type="email" placeholder="Enter Your Email" name="email" id="email" required><br>
                            <div id="emailError"></div>
                        </div>
                        <div class="form-group">
                            <label for="gender"><b>Gender:</b></label><br>
                            <input type="radio" name="gender" value="male" id="male" checked="checked"> Male<br>
                            <input type="radio" name="gender" value="female" id="female"> Female<br>
                            <input type="radio" name="gender" value="other" id="other"> Other<br><br>
                        </div>
                        <div class="form-group">
                            <label for="birthday"><b>Birthday:</b></label>
                            <input type="date" id="birthdate" name="dob" placeholder="yyyy/mm/dd" min="1980-01-01" max="2000-01-01" required>    
                            <div id="birthdateError"></div>
                        </div>
                        <div class="form-group">
                            <input type="file" name="profile_photo" id="file" required>
                            <div id="profileError"></div>
                        </div>
                
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary my-4" value="Add User" id="submit_form">
                            <div id="formdata"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Footer -->
        <%- include ('../partials/footer') %>
      </div>
    </div>
  
    <!-- Include scripts -->
    <%- include ('../partials/scripts') %>
  </body>
  